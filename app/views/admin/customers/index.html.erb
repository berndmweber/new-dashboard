<h1>Listing customers</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Puppetmaster url</th>
      <th>Puppetdb url</th>
      <th>Githubrepo url</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
<% @customers.each do |customer| %>
    <tr>
      <td><%= link_to customer.name, admin_customer_path(customer) %></td>
      <td><%= customer.puppetmaster_url %></td>
      <td><%= customer.puppetdb_url %></td>
      <td><%= customer.githubrepo_url %></td>
      <td><%= link_to 'Show', admin_customer_path(customer), :class => "btn btn-link" %></td>
      <% if can? :update, customer %>
        <td><%= link_to 'Edit', edit_admin_customer_path(customer), :class => "btn btn-link" %></td>
        <td><%= link_to 'Destroy', admin_customer_path(customer), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-link" %></td>
      <% end %>
    </tr>
<% end %>
  </tbody>
</table>

<br />

<% if can? :update, @customers %>
  <%= link_to 'New Customer', new_admin_customer_path, :class => 'btn btn-primary', :role => 'button' %>
<% end %>